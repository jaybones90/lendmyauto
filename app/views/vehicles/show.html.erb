<h1>Vehicle Stats</h1>

<%= link_to "Edit Vehicle", edit_vehicle_path(@vehicle) %>
<br>
<%= link_to "Remove Vehicle", vehicle_path(@vehicle), :data => {:confirm => "Are you sure you want to remove your vehicle from the system?", :method => "delete"} %>
<br>
<%= link_to "Add Images", new_vehicle_image_path(@vehicle) %>

<% if @vehicle.images %>
  <% @vehicle.images.each do |image| %>
  <%= image_tag image.avatar(:medium) %>
  <% end%>
<% end %>

<% if @vehicle.features %>
  <% @vehicle.features.each do |feature| %>
  <%= feature.description %>
  <% end%>
<% end %>

<ul>
  <li><%= @vehicle.make %> </li>
  <li><%= @vehicle.model %> </li>
  <li><%= @vehicle.year %> </li>
  <li><%= @vehicle.milage %> </li>
  <li><%= @vehicle.transmission %> </li>
  <li><%= @vehicle.color %> </li>
  <li><%= @vehicle.seats %> </li>
  <li><%= @vehicle.category.name %> </li>
</ul>
