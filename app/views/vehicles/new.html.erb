<section>
  <div class="container">
    <h1>Enter Your Vechicle Details</h1>

    <%= render "layouts/errors", :object => @vehicle %>

    <%= form_for [@user, @vehicle] do |f| %>
      <%= f.label :make %>
      <%= f.text_field :make %>
      <%= f.label :model %>
      <%= f.text_field :model %>
      <%= f.label :year %>
      <%= f.number_field :year %>
      <%= f.label :transmission %>
      <%= f.select :transmission, ["Automatic", "Manual"]%>
      <%= f.label :color %>
      <%= f.text_field :color %>
      <%= f.label "Number Of Seats" %>
      <%= f.number_field :seats %>
      <%= f.label :category %>
      <%= f.select :category, ["Suv","Truck", "Sedan", "Coupe", "Van", "Wagon", "Convertible","Sports Car", "Hybrid/Electric",  "Luxury"] %>
    <% end %>

  </div>
</section>
