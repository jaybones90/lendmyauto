<section class="reservation-container">
  <div class="container">

    <div class="image-grid">
      <div class="row">
        <% @vehicle.images.each do |image| %>
        <div class="col-md-3">
          <%= image_tag image.avatar(:medium) %>
        </div>
        <% end %>
      </div>
    </div>

    <div class="vehicle-details">
      <h1>Vehicle Details </h1>
      <h5> <%= @vehicle.make %> </h5>
    </div>

    <div class="vehicle-features">




    </div>

  </div>
</section>
