<section>
  <div class="image-grid">
    <% @vehicle.images.each do |image| %>
      <div><%= image_tag image.avatar %></div>
    <% end %>
  </div>
  <div class="container reservation">
    <div class="row">
      <div class="col-sm-12 col-md-8">
        <div class="reservation-vehicle">
          <h1> <%= @vehicle.year %> </h1>
          <h1> <%= @vehicle.make %> </h1>
          <h1> <%= @vehicle.model %></h1>
          <ul>
            <li> Milage: <%= @vehicle.milage %> </li>
            <li> Color: <%= @vehicle.color %> </li>
            <li> Seats: <%= @vehicle.seats %> </li>
            <li> Doors: <%= @vehicle.doors %> </li>
          </ul>
        </div>
        <div class="vehicle-features">
          <h5>Features</h5>
          <ul class="row">
            <% @features.each do |feature| %>
              <div class="col-sm-3 col-md-4">
                <li> <%= feature.description %> </li>
              </div>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="col-sm-12 col-md-4">
        <div class="price">
          <p>Daily Price: <%= @vehicle.daily_price %></p>
        </div>
        <div class="reservation-form">
          <%= simple_form_for [@vehicle, @reservation] do |f| %>
          <%= f.input_field :start_date, as: :date, start_year: Date.today.year,
          end_year: Date.today.year + 5,
          order: [:month, :day, :year] %>
          <%= f.input :end_date, as: :date, start_year: Date.today.year,
          end_year: Date.today.year + 5,
          order: [:month, :day, :year] %>
          <%= f.button :submit %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
